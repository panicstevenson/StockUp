<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



    <TextView
        android:id="@+id/add_grocery_text"
        android:text="@string/add_view_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/grocery_name"
        android:text="@string/grocery_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_grocery_text"
        android:textSize="24sp"
        />

    <EditText
        android:id="@+id/grocery_edit_name"
        android:hint="@string/grocery_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/grocery_name"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="64dp"
        />

    <TextView
        android:id="@+id/grocery_quantity"
        android:text="@string/quantity"
        android:layout_marginTop="12dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/grocery_edit_name"
        android:textSize="24sp"
        />

    <Button
        android:id="@+id/add_button"
        android:text="@string/button_add_grocery"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/cancel_button"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner3"
        android:layout_below="@+id/grocery_quantity"
        android:spinnerMode="dropdown"
        android:layout_marginLeft="12dp"
        android:entries="@array/int_array"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@+id/grocery_quantity"
        android:spinnerMode="dropdown"
        android:layout_marginLeft="84dp"
        android:entries="@array/item_array"
        />

    <TextView
        android:id="@+id/brand"
        android:text="@string/brand"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner"
        android:textSize="24sp"
        />

    <EditText
        android:id="@+id/grocery_edit_brand"
        android:hint="@string/brand_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/brand"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="64dp"
        />

    <TextView
        android:id="@+id/expire_exhaust_date"
        android:text="@string/expires"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/grocery_edit_brand"
        android:textSize="24sp"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:layout_below="@+id/expire_exhaust_date"
        android:spinnerMode="dropdown"
        android:layout_marginLeft="12dp"
        android:entries="@array/int_array"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner4"
        android:layout_below="@+id/expire_exhaust_date"
        android:spinnerMode="dropdown"
        android:layout_marginLeft="84dp"
        android:entries="@array/date_array"
        />

    <TextView
        android:id="@+id/category"
        android:text="@string/category"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner4"
        android:textSize="24sp"
        />

    <EditText
        android:id="@+id/edit_category"
        android:hint="@string/category"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/category"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="64dp"
        />


    <Button
        android:id="@+id/cancel_button"
        android:text="@string/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>