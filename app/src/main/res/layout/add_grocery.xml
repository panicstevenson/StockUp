<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/cancel_button"
        android:text="@string/arrow"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textSize="36sp"
        />
    <TextView
        android:id="@+id/add_grocery_text"
        android:text="@string/add_view_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/cancel_button"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:textSize="36sp" />
    <TextView
        android:id="@+id/grocery_name"
        android:text="@string/grocery_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cancel_button"
        android:textSize="24sp" />
    <EditText
        android:id="@+id/grocery_edit_name"
        android:text="@string/dummy_grocery"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/grocery_name"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="64dp"
        />
    <TextView
        android:id="@+id/grocery_quantity"
        android:text="Quantity"
        android:layout_marginTop="12dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/grocery_edit_name"
        android:textSize="24sp"
        />
    <Button
        android:id="@+id/add_button"
        android:text="@string/button_add_grocery"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@+id/grocery_quantity"
        android:spinnerMode="dialog" />


</RelativeLayout>